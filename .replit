entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Dev"
author = 39467490
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd EmergencyAIProject/client && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd EmergencyAIProject/server && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd EmergencyAIProject/ai_engine && uvicorn main:app --host 0.0.0.0 --port 8000"
